<div class="container-fluid">
    <div class="input-group mb-3">
        <input 
            type="text"
            class="form-control"
            aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default"
            placeholder="Client name"
            @bind="@Input!.ClientName"
            @bind:event="oninput">
    </div>
    <div class="input-group mb-3">
        <input 
            type="text" 
            class="form-control" 
            aria-label="Sizing example input" 
            aria-describedby="inputGroup-sizing-default"
            placeholder="Additional info"
            @bind="@Input!.AdditionalInfo"
            @bind:event="oninput">
    </div>

    <div class="modal-footer justify-content-center">
        <button type="button" class="btn btn-dark" @onclick=@OnSubmit>Submit</button>
    </div>
</div>

@code {
    [Parameter]
    public UpdateRequest? Input { get; set; }

    [Parameter]
    public EventCallback OnChangeSave { get; set; }

    private async Task OnSubmit()
    {
        await OnChangeSave.InvokeAsync();
        StateHasChanged();
    }
}
