<div class="container-fluid">
    <div class="input-group mb-3">
            <input 
                type="text"
                class="form-control"
                aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default"
                placeholder="Client name"
               @bind="@Input!.ClientName"
                @bind:event="oninput">
    </div>
    <div class="input-group mb-3">
        <input 
            type="text" 
            class="form-control" 
            aria-label="Sizing example input" 
            aria-describedby="inputGroup-sizing-default"
            placeholder="Additional info"
            @bind="@Input!.AdditionalInfo"
            @bind:event="oninput">
    </div>
</div>

@code {
    [Parameter]
    public OrderData? Input { get; set; }
}
